<style>
.panel-default
{
  border:2px solid black;
}
.panel-heading
{
  border:2px solid black;
}
</style>
<div class="row" >
  <div class="col-md-4 col-md-offset-4" >
    <div class="panel panel-default" style="background-image: linear-gradient(to bottom right,rgba(166,233,249,0.5), rgba(253,147,63,0.5))">
      <div class="panel-heading">
        <h1 align="center">Sign In</h1>
        {{# if hasErrors}}
          <div class="alert alert-danger">
            {{#each messages}}
            <p>{{this}}</p>
            {{/each}}
          </div>
        {{/if}}
      </div>
      <div class="panel-body">
        <form  action="/user/signin" method="post">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="text" id="email" name="email" class="form-control" placeholder="email-id">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="password">
          </div>
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
        <hr>
        <p>Don't have an account?<a href="/user/signup">Sign up instead!</a></p>
      </div>
    </div>


  </div>
</div>
